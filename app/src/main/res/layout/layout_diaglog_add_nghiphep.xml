<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">
    <EditText
        android:id="@+id/txtMaNV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mã nhân viên..." />
    <TextView
        android:id="@+id/txtHoTen"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="left|bottom"
        android:textSize="18dp"
        android:layout_below="@id/txtMaNV"
        android:layout_alignParentStart="true"
        android:hint=" Họ và tên"       />

    <TextView
        android:id="@+id/txtPhanXuong"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="left|bottom"
        android:textSize="18dp"
        android:layout_below="@id/txtHoTen"
        android:layout_alignParentStart="true"
        android:hint=" Xưởng/Phòng ban"       />

    <TextView
        android:id="@+id/txtTuNgay"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="left|bottom"
        android:textSize="18dp"
        android:layout_below="@id/txtPhanXuong"
        android:layout_alignParentStart="true"
        android:hint=" Từ ngày: "       />

    <TextView
        android:id="@+id/txtDenNgay"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="left|bottom"
        android:textSize="18dp"
        android:layout_below="@id/txtTuNgay"
        android:layout_alignParentStart="true"
        android:hint=" Đến ngày: "       />

    <TextView
        android:id="@+id/txtLoaiNghiPhep"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="left|bottom"
        android:textSize="18dp"
        android:layout_below="@id/txtDenNgay"
        android:layout_alignParentStart="true"
        android:hint=" Chọn lý do"       />

    <EditText
        android:id="@+id/txtSoNgay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLoaiNghiPhep"
        android:inputType="number"
        android:hint="Số ngày..." />

    <EditText
        android:id="@+id/txtGhiChu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSoNgay"
        android:hint="Ghi chú..." />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="right|bottom"
        android:layout_below="@id/txtGhiChu"
        android:layout_height="wrap_content">

        <com.ornach.nobobutton.NoboButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            app:nb_text="Lưu"
            app:nb_textSize="16dp"
            app:nb_borderColor="#FFFFFF"
            app:nb_borderWidth="2dp"
            app:nb_backgroundColor="@color/colorPrimary"
            app:nb_focusColor="#B83CC3"
            app:nb_textColor="#FFF"
            android:layout_below="@id/txtGhiChu"
            android:id="@+id/btnLuu"
            app:nb_radius="5dp"
            app:nb_fontIcon="&#xf0c7;"/>

        <com.ornach.nobobutton.NoboButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            app:nb_text="Đóng"
            app:nb_textSize="16dp"
            app:nb_borderColor="#FFFFFF"
            app:nb_borderWidth="2dp"
            app:nb_backgroundColor="#EF3D56"
            app:nb_focusColor="#B83CC3"
            app:nb_textColor="#FFF"
            android:layout_below="@id/txtGhiChu"
            android:id="@+id/btnDong"
            app:nb_radius="5dp"
            app:nb_fontIcon="&#xf2d3;"/>
    </LinearLayout>
</RelativeLayout>