<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
       android:orientation="horizontal"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:clickable="true"

        android:clipChildren="false"
        android:clipToPadding="false"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.0px"
        android:foreground="?android:attr/selectableItemBackground"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"

            android:orientation="horizontal"
            android:weightSum="1.2">

            <TextView
                android:id="@+id/txtMaLenh"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center|left"
                android:text="LTC01200007"></TextView>

            <TextView
                android:id="@+id/txtNgayTangCa"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:gravity="center|left"
                android:textStyle="bold"
                android:text="25/12/2020"></TextView>

            <TextView
                android:id="@+id/txtPhanXuong"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.35"
                android:ellipsize="end"

                android:maxLines="1"
                android:scrollHorizontally="false"
                android:singleLine="true"
                android:gravity="center|left"
                android:text="ĐỊNH PHÔI"></TextView>

            <TextView
                android:id="@+id/txtGioBD"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:gravity="center|left"
                android:text="15:30"></TextView>

            <TextView
                android:id="@+id/txtGioKT"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:gravity="center|left"
                android:text="15:30"></TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>